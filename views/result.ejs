<%- include('partials/header') %>
  <body class="d-flex h-100 text-bg-dark">    
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="mb-auto">
    <div>
      <h3 class="float-md-start mb-0">Lumos.ai</h3>
      <nav class="nav nav-masthead justify-content-center float-md-end">
        <a class="nav-link fw-bold py-1 px-0" href="/">Home</a>
        <a class="nav-link fw-bold py-1 px-0" href="/create">Create Worksheet</a>
        <a class="nav-link fw-bold py-1 px-0" href="/access">Answer Worksheet</a>
      </nav>
    </div>
  </header>

  <main class="p-3">
    <h1 class="text-center">Results for: <%- package.title %></h1>
    <div class="p-3" style="background-color: #16191c;border-radius: 15px;">
    <p class="lead"><b style="color:#64707d">Question 1: </b><b><%- package.q1 %></b></p>
    <p class="lead"><b style="color:#64707d">Your Answer: </b><%- package.a1 %></p>
    <p class="lead"><b style="color:#64707d">Answer Key: </b><%- package.akey1 %></p>
    <p class="lead"><b style="color:#64707d">Your Score: </b><%- scores.score1 %> out of 3</p>
    <p class="lead"><b style="color:#64707d">Feedback: </b><%- scores.feedback1 %></p></div>
    <p class="p3"></p>
    <div class="p-3" style="background-color: #16191c;border-radius: 15px;">
      <p class="lead"><b style="color:#64707d">Question 2: </b><b><%- package.q2 %></b></p>
      <p class="lead"><b style="color:#64707d">Your Answer: </b><%- package.a2 %></p>
      <p class="lead"><b style="color:#64707d">Answer Key: </b><%- package.akey2 %></p>
      <p class="lead"><b style="color:#64707d">Your Score: </b><%- scores.score2 %> out of 3</p>
      <p class="lead"><b style="color:#64707d">Feedback: </b><%- scores.feedback2 %></p></div>
    <p class="lead py-3 text-center">
      <a href="/" class="btn btn-lg btn-light fw-bold border-white bg-white">Return to homepage</a>
    </p>
  </main>
<%- include('partials/footer') %>
